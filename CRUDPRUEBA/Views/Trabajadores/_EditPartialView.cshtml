@model CRUDPRUEBA.Models.Trabajadores
@{
    ViewData["Title"] = "Edit";
}
<!-- Modal -->
<div class="modal fade" id="editarEmpleado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editar trabajador</h1>
            </div>
            <form action="" id="formId" method="post">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" name="Id" id="eId"/>
                            <div class="form-group">
                                <label>Tipo de documento:</label>
                                <select class="form-control" name="TipoDocumento" id="eTipoDocumento">
                                    <option value="" selected>Seleccione:</option>
                                    <option value="DNI">DNI</option>
                                </select>
                                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Numero de documento:</label>
                                <input asp-for="NumeroDocumento" class="form-control" name="NumeroDocumento" id="eNumeroDocumento" />
                                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Nombres:</label>
                                <input asp-for="Nombres" class="form-control" name="Nombres" id="eNombres"/>
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Sexo:</label>
                                <input asp-for="Sexo" class="form-control" name="Sexo" id="eSexo"/>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Departamento:</label>
                                <select class="form-control" name="IdDepartamento" id="eIdDepartamento"></select>
                                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Provincia</label>
                                <select  class="form-control" name="IdProvincia" id="eIdProvincia"></select>
                                <span asp-validation-for="IdProvincia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Distrito:</label>
                                <select  class="form-control" name="IdDistrito" id="eIdDistrito"></select>
                                <span asp-validation-for="IdDistrito" class="text-danger"></span>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
            </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
